pipeline{
    agent any
    triggers {
        pollSCM '* * * * *'
    }
    tools{ nodejs "NodeJS"}
    stages{

        stage("install python2"){
            steps{
               sh "apt install python2"
            }
        }
        stage("install dependencies"){
            steps{
               sh "npm install"
            }
        }

        stage("npm build"){
            steps{
               sh "npm build"
            }
        }

    }  
}